{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "target": "ES2020",
    "types": [
      "node"
    ],
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}